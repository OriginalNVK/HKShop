@model HKShop.DTOs.DangNhapRequest
@{
	ViewData["Title"] = "Đăng nhập";
}

<div class="container-fluid py-5">
	<div class="container py-5">
		<h1 class="mb-4 mt-4 text-center" style="color: #D10024;">Đăng nhập</h1>
		<form asp-action="DangNhap" asp-route-returnurl="@ViewBag.ReturnUrl">
			<div class="text-danger" asp-validation-summary="All"></div>
			<div class="row">
				<div class="row">
					<div class="col-md-12 col-lg-6">
						<div class="form-item w-100">
							<label asp-for="@Model.Username" class="form-label my-3"></label><sup>*</sup>
							<input asp-for="@Model.Username" class="form-control">
							<span asp-validation-for="@Model.Username" class="text-danger"></span>
						</div>
					</div>
					<div class="col-md-12 col-lg-6">
						<div class="form-item w-100">
							<label asp-for="@Model.Password" class="form-label my-3"></label><sup>*</sup>
							<input asp-for="@Model.Password" class="form-control">
							<span asp-validation-for="@Model.Password" class="text-danger"></span>
						</div>
					</div>
				</div>
				<div class="row g-4 text-center align-items-center justify-content-center pt-4 mt-4">
					<button type="submit" class="btn border-primary border-hover-primary py-3 px-4 text-uppercase">Đăng Nhập</button>
					<a asp-action="DangKy" asp-controller="KhachHang" class="btn border-primary border-hover-primary py-3 text-uppercase px-4">Đăng ký</a>
					<a asp-controller="KhachHang" asp-action="QuenMatKhau" class="btn border-danger btn-hover-danger px-4 py-3 text-uppercase">Quên mật khẩu</a>
				</div>
			</div>
		</form>
	</div>
</div>



